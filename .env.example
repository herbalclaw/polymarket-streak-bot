# Polymarket Bot Configuration

# ========== Wallet ==========
# Your Polygon wallet private key (for signing orders)
PRIVATE_KEY=0x_your_private_key_here

# ========== Strategy ==========
STREAK_TRIGGER=4          # Bet after N consecutive same outcomes
BET_AMOUNT=5              # USD per bet
MIN_BET=1                 # Minimum bet amount
MAX_DAILY_BETS=100        # Max bets per day
MAX_DAILY_LOSS=50         # Stop trading if daily loss exceeds this

# ========== Timing ==========
ENTRY_SECONDS_BEFORE=30   # Enter N seconds before window opens
TIMEZONE=Asia/Jakarta     # Timezone for daily reset (UTC, Asia/Jakarta, Asia/Singapore, etc.)

# ========== Mode ==========
PAPER_TRADE=true          # Set to false for live trading

# ========== Copytrade ==========
COPY_WALLETS=             # Comma-separated wallet addresses to copy
COPY_POLL_INTERVAL=5      # Polling interval in seconds (v1)

# ========== WebSocket Settings ==========
USE_WEBSOCKET=true        # Enable WebSocket for real-time orderbook data

# ========== Fast Polling (v2) ==========
FAST_POLL_INTERVAL=1.5    # Fast polling interval in seconds

# ========== REST Client ==========
REST_TIMEOUT=3            # REST API timeout in seconds
REST_RETRIES=2            # Number of retries for failed requests

# ========== Trading Client ==========
SIGNATURE_TYPE=0          # 0=EOA/MetaMask, 1=Magic/proxy wallet
FUNDER_ADDRESS=           # Required for proxy wallets (SIGNATURE_TYPE=1)

# ========== Resilience ==========
CIRCUIT_BREAKER_THRESHOLD=5       # Failures before circuit opens
CIRCUIT_BREAKER_RECOVERY_TIME=60  # Seconds before circuit recovery
RATE_LIMIT_REQUESTS_PER_MINUTE=120

# ========== Logging ==========
LOG_LEVEL=INFO            # DEBUG, INFO, WARNING, ERROR

# ========== External APIs ==========
POLYGONSCAN_API_KEY=      # Optional: for on-chain data

# ========== Delay Impact Model ==========
DELAY_MODEL_BASE_COEF=0.8         # Base coefficient for delay impact
DELAY_MODEL_MAX_IMPACT=10.0       # Maximum impact multiplier
DELAY_MODEL_BASELINE_SPREAD=0.02  # Baseline spread assumption
